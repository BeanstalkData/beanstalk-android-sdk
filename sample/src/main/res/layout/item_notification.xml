<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/notification_os"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="@dimen/four_dp"
        android:textSize="@dimen/text_size_caption"
        tools:text="Android" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/notification_os"
        android:layout_alignTop="@id/notification_os"
        android:layout_toLeftOf="@id/notification_os"
        android:layout_toStartOf="@id/notification_os"
        android:gravity="center_vertical|start"
        android:textSize="@dimen/text_size_title"
        tools:text="Title" />

</RelativeLayout>
